#include "stdafx.h"
#include <iostream>
#include "math.h"
#include "conio.h"

using namespace std;


int main()
{
	float a, b, c;
	float S, A;

    cout<< "ingrese el lado a: ";
	cin>> a;
	cout<< "ingrese el lado b: ";
	cin>> b;
	cout<< "ingrese el lado c: ";
	cin>> c;

	S=(a+b+c)/2.0;

	A=sqrt(S*(S-a)*(S-b)*(S-c));

	cout<<"El area es: " <<A;

	getch();

	return 0;
}
