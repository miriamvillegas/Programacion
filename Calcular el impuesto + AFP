#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;


void main()

{
	cout<<"   ***** CALCULO DEL PAGO DE IMPUESTOS ***** \n \n" ;

	float sueldo, sueldobase, impuesto, AFP;

	
	cout<<"ingrese el sueldo minimo: ";
		cin>>sueldobase;
		cout<<"ingrese el sueldo para calcular su impuesto: ";
		cin>>sueldo;

		if(sueldo>2*sueldobase) 
		
		{impuesto=sueldo*0.13;
		AFP=sueldo*0.12;
		cout<<"el impuesto a pagar es: "<<impuesto <<"\n";
		cout<<"el AFP a pagar es: "<<AFP;
}
		
		else
		{cout<<"no paga impuestos ni AFP" ; }

	

	getch();

}

